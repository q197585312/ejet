<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rectangle_white_stroken_gray_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gv_item_iv1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_cut_apart" />

    <LinearLayout
        android:id="@+id/gv_item_bottom_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/gv_item_bottom_tv1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="aaaaa"
            android:textColor="@color/word_orange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gv_item_bottom_tv2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="aaaaa"
            android:textColor="@color/word_orange"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>